{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "process": "readonly",
        "expect": "readonly",
        "describe": "readonly",
        "test": "readonly",
        "beforeEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
